<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/received_message_bubble"
    android:clickable="true"
    android:focusable="true"
    android:layout_gravity="start"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="50dp"
    android:layout_marginTop="4dp">

    <!-- Share label -->
    <TextView
        android:id="@+id/tvShareLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shared a post"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="6dp" />

    <!-- Post image -->
    <ImageView
        android:id="@+id/ivPostImage"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:background="#F5F5F5"
        android:clipToOutline="true" />

    <!-- Post content container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@android:color/white">

        <!-- Username -->
        <TextView
            android:id="@+id/tvPostUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- Caption -->
        <TextView
            android:id="@+id/tvPostCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post caption..."
            android:textSize="13sp"
            android:textColor="#666666"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Time -->
    <TextView
        android:id="@+id/tvPostTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4:49 PM"
        android:textSize="10sp"
        android:textColor="#999999"
        android:layout_gravity="end"
        android:layout_marginTop="4dp" />

</LinearLayout>