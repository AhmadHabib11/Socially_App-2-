<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="110dp"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="9dp">

    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center">

        <!-- This is the circular ring background -->
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerInside"
            android:src="@drawable/story_outline" />

        <!-- This is the profile image that goes inside the ring -->
        <ImageView
            android:id="@+id/storyProfileImage"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/circular_mask" />

    </FrameLayout>

    <TextView
        android:id="@+id/storyUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:textColor="@color/black" />

</LinearLayout>