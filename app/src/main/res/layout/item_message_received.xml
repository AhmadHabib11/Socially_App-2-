<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvReceivedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4:49 PM"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp" />

    <!-- Text Message -->
    <TextView
        android:id="@+id/tvReceivedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textSize="15sp"
        android:background="@drawable/received_message_bubble"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:maxWidth="250dp"
        android:layout_below="@id/tvReceivedTime"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:visibility="visible" />

    <!-- Image Message -->
    <ImageView
        android:id="@+id/ivReceivedImage"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="250dp"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:background="@drawable/received_message_bubble"
        android:layout_below="@id/tvReceivedTime"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

    <!-- Video Message -->
    <FrameLayout
        android:id="@+id/flReceivedVideo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@id/tvReceivedTime"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/received_message_bubble"
        android:clipToOutline="true"
        android:visibility="gone">

        <VideoView
            android:id="@+id/vvReceivedVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/ivReceivedPlayButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_media_play"
            android:background="@drawable/play_button_bg"
            android:padding="12dp"
            android:elevation="4dp" />
    </FrameLayout>

</RelativeLayout>